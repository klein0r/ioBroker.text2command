{
  "name": "iobroker.text2command",
  "version": "3.0.2",
  "description": "Convert texts to ioBroker commands",
  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "contributors": [
    {
      "name": "Matthias Kleine",
      "email": "info@haus-automatisierung.com"
    }
  ],
  "homepage": "https://github.com/ioBroker/ioBroker.text2command",
  "license": "MIT",
  "keywords": [
    "text",
    "commands"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ioBroker/ioBroker.text2command.git"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.4"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.6.0",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/adapter-react": "2.0.22",
    "@iobroker/testing": "^4.1.0",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node16": "^16.1.1",
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.4",
    "@types/node": "^16.18.60",
    "@types/proxyquire": "^1.3.30",
    "@types/react-dom": "^17.0.22",
    "@types/react": "^17.0.69",
    "@types/sinon": "^17.0.0",
    "@types/sinon-chai": "^3.2.11",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "react-dom": "^17.0.2",
    "react": "^17.0.2",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.0.4"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "prebuild": "rimraf admin/build",
    "build": "build-adapter react",
    "watch": "build-adapter react --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint --ext .js,.jsx .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.text2command/issues"
  },
  "readmeFilename": "README.md"
}